{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "declarationDir": "./dist/esm",
    "pretty": true,
    "outDir": "./dist/esm",
    "isolatedModules": true
  }
}
