{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types",
    "removeComments": true,
    "pretty": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },
  "exclude": ["types","dist","**/stories/*"]
}
